<div class="container">
  <div class="row row-center">
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <div class="card">
        <div class="card-header">
          <strong>Sign up</strong>
        </div>
        <div class="card-body padded">
          <form {{action "signup" on="submit"}}>
            <div {{bind-attr class=":form-group errors.email:has-error"}}>
              <label class="control-label">Email</label>
              {{input value=email class="form-control"}}
              <p class="help-block">{{#each errors.email as |e|}}{{e.message}}{{/each}}</p>
            </div>

            <div {{bind-attr class=":form-group errors.password:has-error"}}>
              <label class="control-label">Password</label>
              {{input type="password" value=password class="form-control"}}
              <p class="help-block">{{#each errors.password as |e|}}{{e.message}}{{/each}}</p>
            </div>

            <button type="submit" class="btn btn-primary">Sign up</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
