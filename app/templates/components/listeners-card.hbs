<div class="card">
  <div class="card-header">
    <strong>Listeners</strong>
  </div>
  <div class="card-body">
    <div class="listeners">
      {{#if listens.isPending}}
        {{app-spinner}}
      {{else}}
        {{#each listens as |l|}}
        <div class="listener">
          <img {{bind-attr src="l.user.avatar"}} class="avatar">
        </div>
        {{else}}
        <div class="padded text-muted text-center">
          No one has listened, be the first!
        </div>
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>
